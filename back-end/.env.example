# Omni Monitor - Environment Configuration
# =========================================
# Copy this file to .env and customize values
# All values shown are defaults

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Refresh interval in seconds (0.5 = 2 updates/sec)
OMNI_REFRESH_INTERVAL=0.5

# Enable/disable features (true/false)
OMNI_ENABLE_GPU=true
OMNI_ENABLE_BATTERY=true
OMNI_ENABLE_PROCESSES=true

# Max iterations (empty = infinite)
OMNI_MAX_ITERATIONS=

# ==========================================
# WEBSOCKET SERVER SETTINGS
# ==========================================

# Server binding
OMNI_WEBSOCKET_PORT=8080
OMNI_WEBSOCKET_HOST=0.0.0.0

# Client limits (DoS protection)
OMNI_MAX_CLIENTS=50
OMNI_SEND_TIMEOUT_SEC=5.0

# Message security
OMNI_MAX_MESSAGE_SIZE=1024
OMNI_RATE_LIMIT_WINDOW_SEC=1.0
OMNI_RATE_LIMIT_MAX_MESSAGES=10

# CORS (comma-separated, use * for dev)
OMNI_CORS_ORIGINS=*

# ==========================================
# AI ANOMALY DETECTION SETTINGS
# ==========================================

# Critical thresholds (%)
OMNI_AI_CPU_CRITICAL=95.0
OMNI_AI_MEM_CRITICAL=95.0
OMNI_AI_TEMP_CRITICAL=95.0

# Z-Score thresholds
OMNI_AI_ZSCORE_WARNING=2.5
OMNI_AI_ZSCORE_CRITICAL=3.5

# CUSUM drift detection
OMNI_AI_CUSUM_THRESHOLD=5.0
OMNI_AI_CUSUM_DRIFT=0.5

# ADWIN regime change
OMNI_AI_ADWIN_DELTA=0.002
OMNI_AI_ADWIN_MIN_WINDOW=30

# Holt-Winters smoothing
OMNI_AI_HW_ALPHA=0.3
OMNI_AI_HW_BETA=0.1
OMNI_AI_HW_GAMMA=0.1
OMNI_AI_HW_SEASON_LENGTH=60

# Adaptive sampling
OMNI_AI_SAMPLE_RATE_MIN=0.5
OMNI_AI_SAMPLE_RATE_MAX=5.0
OMNI_AI_VOLATILITY_THRESHOLD=0.1

# Saturation model
OMNI_AI_SATURATION_KNEE_RATIO=0.8

# Correlation thresholds
OMNI_AI_CPU_TEMP_CORR_MIN=0.5
OMNI_AI_IO_LATENCY_CORR_MIN=0.6

# Prediction settings
OMNI_AI_PRED_CONFIDENCE_MIN=0.6
OMNI_AI_MIN_SAMPLES_PRED=30

# ==========================================
# COLLECTOR SETTINGS
# ==========================================

# History buffer length (samples to keep)
OMNI_HISTORY_LENGTH=120

# Maximum number of processes to track
OMNI_MAX_PROCESSES=15

# GPU history length for trend detection
OMNI_GPU_HISTORY_LEN=10
